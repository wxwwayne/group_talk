<div class="col-md-12">
  <h2 class="text-center">My Posts</h2>
  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>Group Name</th>
        <th>Content</th>
        <th>Last Update</th>
        <th> </th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>#</td>
          <td><%= link_to(post.group.title, group_path(post.group)) %></td>
          <td><%= truncate(post.content, length: 20) %></td>
          <td><%= post.updated_at.to_s(:long) %></td>
          <td>
            <%= link_to("Edit", edit_group_post_path(post.group, post), class:"btn btn-info btn-xs") %>
            <%= link_to("Delete", group_post_path(post.group, post), class:"btn btn-danger btn-xs", method: :delete, data: { confirm: "Are you sure?" }) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
