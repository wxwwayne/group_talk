<div class="col-md-12">
  <div class="group">
    <%= link_to("Edit", edit_group_path(@group), class: "btn btn-primary pull-right") %>
    <%= link_to("New post", new_group_post_path(@group), class: "btn btn-success pull-right") %>
  </div>
  <h2><%= @group.title %></h2>
  <p><%= @group.description %></p>
  <table class="table">
    <thead>
      <tr>
        <th>Posts</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <% if current_user?(post.user) %>
            <td><%= link_to("Edit", edit_group_post_path(post.group, post), class:"btn btn-default btn-xs") %>
              <%= link_to("Delete", group_post_path(post.group, post), class:"btn btn-default btn-xs", method: :delete, data: { confirm: "Are you sure?" }) %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
